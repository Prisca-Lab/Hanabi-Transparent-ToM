//
//	Sylus file to be compiled to CSS with
//
//	`stylus lobby.styl -u nib`
//
//	Install stylus with `npm install stylus -g`
//	Install nib with    `npm install nib -g` (for css3 comaptability extensions)
//

@import 'nib'

// some color variables
fallbackBackground = #7e1769
headerGlow = #28d9f8
headerBackground = #1a468c
headerFonts = "BebasNeue", sans-serif

roomsBackground = rgba(255, 255, 255, 0.4)
participantsBackground = rgba(255, 230, 109, 0.61)
highlightOrange = #ffcb00
roomButtonBackground = #005ac8
participantButtonBackground = #856a00
clear = rgba(0, 0, 0, 0)
neutralGray = #C6C6C6



html
	width: 100%
	height: 100%
body
	margin: 0px
	padding: 0px
	background: fallbackBackground
	// rainbow gradient
	background: linear-gradient(left, rgb(000,167,225), rgb(127,000,145), rgb(255,000,127), rgb(255,050,047), rgb(255,232,000), rgb(000,169,078))
	width: 100%
	height: 100%
	display: flex
	flex-direction: column 		// for older firefox
	flex-wrap: nowrap
	color: white
	font-family: sans-serif
/* XXX this causes major performance penalty.  Find a way to conditionally activate it... XXX
body:after
	background-image: radial-gradient(circle closest-side at center center , rgba(0, 0, 0, 0) 70%, rgba(0, 0, 0, 0.4) 250%);
	bottom: 0;
	left: 0;
	right: 0;
	top: 0;
	content: "";
	pointer-events: none;
	position: absolute;
	z-index: -1;
*/
#body
	flex-grow: 1
	display: flex
	flex-direction: column
	flex-wrap: nowrap

#header, #footer
	background: green
	padding: 2px 10px
	background: headerBackground
	box-shadow: 0 0 7px headerGlow
	font-family: headerFonts
#header
	font-size: 1.2em
	text-shadow: 0 0 3px headerGlow
#footer
	font-style: italic


// set up the columns
#content
	display: flex
	flex-grow: 1
	flex-direction: row
	flex-wrap: nowrap
	justify-content: center
	margin-bottom: 30px
.column
	display: flex
	flex-grow: 0
	flex-direction: column
	flex-wrap: nowrap
	min-width: 200px
.column-title
	font-family: headerFonts
	font-size: 1.2em
	text-align: center

.column-container
	display: flex
	flex-grow: 1
	flex-direction: column
	flex-wrap: nowrap

.participants
	background: participantsBackground
	border: 2px solid highlightOrange
	border-radius: 0 10px 10px 0
.rooms
	background: roomsBackground
	border-radius: 10px 0 0 10px

.column-container
	ul
		flex-grow: 1
		list-style: none
		margin: 0
		padding: 10px 0 0
	ul.bottom-buttons
		flex-grow: 0
		padding-bottom: 10px

		li
			margin-bottom: 0
			color: neutralGray
		li:hover
			box-shadow: 0 0 5px white 
			color: white
			transition: box-shadow .5s, color .5s
			

	li
		border-radius: 4px
		cursor: pointer
		margin: 0 10px 10px
		padding: 4px
		border-bottom: 2px solid clear
		border-top: 2px solid clear
		text-align: center
		position: relative
		user-select: none
.column-container.rooms
	li
		background: roomButtonBackground
	li.joinable
		&:hover
			box-shadow: 0 0 5px headerGlow
			transition: box-shadow .5s

		&:after
			font-size: small
			font-style: italic
			content: 'Join'
			position: absolute
			right: 3px
			opacity: 0
			color: headerGlow
		&:hover:after
			opacity: 1
			transition: opacity .8s

.column-container.participants 
	li
		background: participantButtonBackground
	.clients-list li
		text-align: left
		padding-left: 5px
	li.ready:after
		color: #00E01B
		text-shadow: 0 0 2px black
		font-size: small
		font-style: italic
		content: 'Ready'
		float: right
	li.not-ready:after
		font-size: small
		font-style: italic
		content: 'Not Ready'
		float: right
		color: neutralGray
		
.selected-room
	border-bottom: 2px solid highlightOrange !important
	border-top: 2px solid highlightOrange !important
// display a litte right arrow 
.selected-room:after
	font-family: 'FontAwesome'
	display: inline-block
	content: '\f053'
	position: absolute
	right: -12px
	color: highlightOrange


// setup the user info
#info-row
	flex-grow: 0
	ul
		list-style: none
		margin-left: 10px
	li
		display: inline-block
		margin-left: 10px
		margin-right: 10px
		padding-right: 2em
		position: relative
	.edit
		position: absolute
		right: 0px
	.name, .room
		font-weight: bold
		color: highlightOrange
	.editable
		cursor: pointer
	.editable:hover
		color: highlightOrange
		border-bottom: 1px solid highlightOrange
	.info-title
		font-family: headerFonts
		font-style: italic
		margin-right: 1em


// fun transition effects
.scale0 {
	transform: rotateY(90deg) !important
	transition: transform 20s
}
